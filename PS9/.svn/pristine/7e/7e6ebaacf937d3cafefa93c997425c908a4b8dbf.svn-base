<Page x:Class="BC.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="GamePage">

    <Grid Margin="0,0,-393,-464">
        <TextBlock x:Name="Title" HorizontalAlignment="Left" Margin="317,22,0,0" TextWrapping="Wrap" Text="Boggle" VerticalAlignment="Top" FontSize="30" Width="107"/>
        <DataGrid x:Name="BoggleBoard" HorizontalAlignment="Left" Margin="172,142,0,0" VerticalAlignment="Top" Height="360" Width="400" SelectedIndex="4" Loaded="DataGrid_Loaded" AutoGenerateColumns="False" HeadersVisibility="None"/>
        <TextBlock x:Name="PlayerName" HorizontalAlignment="Left" Height="34" Margin="173,70,0,0" TextWrapping="Wrap" Text="Player Name: " VerticalAlignment="Top" Width="114" FontSize="16"/>
        <TextBlock x:Name="OpponentName" HorizontalAlignment="Left" Height="28" Margin="173,109,0,0" TextWrapping="Wrap" Text="Opponent Name: " VerticalAlignment="Top" Width="135" FontSize="16"/>
        <TextBox x:Name="Player" HorizontalAlignment="Left" Height="28" Margin="308,76,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="116" FontSize="16"/>
        <TextBox x:Name="Opponent" HorizontalAlignment="Left" Height="28" Margin="308,109,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="116" FontSize="16"/>        
    </Grid>
</Page>
