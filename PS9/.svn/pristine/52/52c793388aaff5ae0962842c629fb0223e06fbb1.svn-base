<Page x:Class="BC.SummaryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="SummaryPage">

    <Grid Margin="0,10,-450,-309" Width="750" Height="600">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFAC4949"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Height="38" Margin="283,10,0,0" Text="Game Summary" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" FontSize="24" TextDecorations="Underline"/>
        <ScrollViewer HorizontalAlignment="Left" Height="80" Margin="93,86,0,0" VerticalAlignment="Top" Width="68">
            <TextBlock x:Name="PlayerLegal" TextWrapping="Wrap" Text="TextBlock"/>
        </ScrollViewer>
        <ScrollViewer HorizontalAlignment="Left" Height="80" Margin="533,81,0,0" VerticalAlignment="Top" Width="70">
            <TextBlock x:Name="PlayerIllegal" TextWrapping="Wrap" Text="TextBlock"/>
        </ScrollViewer>
        <ScrollViewer HorizontalAlignment="Left" Height="100" Margin="78,405,0,0" VerticalAlignment="Top" Width="68">
            <TextBlock x:Name="OpponentLegal" TextWrapping="Wrap" Text="TextBlock"/>
        </ScrollViewer>
        <ScrollViewer HorizontalAlignment="Left" Height="100" Margin="533,408,0,0" VerticalAlignment="Top" Width="70">
            <TextBlock x:Name="OpponentIllegal" TextWrapping="Wrap" Text="TextBlock"/>
        </ScrollViewer>
        <ScrollViewer HorizontalAlignment="Left" Height="98" Margin="348,200,0,0" VerticalAlignment="Top" Width="63">
            <TextBlock x:Name="Common" TextWrapping="Wrap" Text="TextBlock"/>
        </ScrollViewer>
        <Label Content="Player Legal" HorizontalAlignment="Left" Margin="81,55,0,0" VerticalAlignment="Top"/>
        <Label Content="Player Illegal" HorizontalAlignment="Left" Margin="535,55,0,0" VerticalAlignment="Top"/>
        <Label Content="Common" HorizontalAlignment="Left" Margin="352,164,0,0" VerticalAlignment="Top"/>
        <Label Content="Opponent Legal" HorizontalAlignment="Left" Margin="81,379,0,0" VerticalAlignment="Top"/>
        <Label Content="Opponent Illegal" HorizontalAlignment="Left" Margin="533,379,0,0" VerticalAlignment="Top"/>
        <Button Content="Play Again?" HorizontalAlignment="Left" Height="27" Margin="348,490,0,0" VerticalAlignment="Top" Width="68"/>

    </Grid>
</Page>
