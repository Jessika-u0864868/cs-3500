<Page x:Class="BC.SummaryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="SummaryPage">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFAC4949"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Height="38" Margin="61,22,0,0" Text="Game Summary" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" FontSize="24" TextDecorations="Underline"/>
        <ScrollViewer HorizontalAlignment="Left" Height="80" Margin="25,81,0,0" VerticalAlignment="Top" Width="68">
            <TextBlock TextWrapping="Wrap" Text="TextBlock"/>
        </ScrollViewer>
        <ScrollViewer HorizontalAlignment="Left" Height="80" Margin="183,81,0,0" VerticalAlignment="Top" Width="70">
            <TextBlock TextWrapping="Wrap" Text="TextBlock"/>
        </ScrollViewer>
        <ScrollViewer HorizontalAlignment="Left" Height="100" Margin="25,190,0,0" VerticalAlignment="Top" Width="68">
            <TextBlock TextWrapping="Wrap" Text="TextBlock"/>
        </ScrollViewer>
        <ScrollViewer HorizontalAlignment="Left" Height="100" Margin="183,190,0,0" VerticalAlignment="Top" Width="70">
            <TextBlock TextWrapping="Wrap" Text="TextBlock"/>
        </ScrollViewer>
        <ScrollViewer HorizontalAlignment="Left" Height="98" Margin="115,117,0,0" VerticalAlignment="Top" Width="63">
            <TextBlock TextWrapping="Wrap" Text="TextBlock"/>
        </ScrollViewer>
        <Label Content="Player Legal" HorizontalAlignment="Left" Margin="20,55,0,0" VerticalAlignment="Top"/>
        <Label Content="Player Illegal" HorizontalAlignment="Left" Margin="185,55,0,0" VerticalAlignment="Top"/>
        <Label Content="Common" HorizontalAlignment="Left" Margin="119,81,0,0" VerticalAlignment="Top"/>
        <Label Content="Opponent Legal" HorizontalAlignment="Left" Margin="28,164,0,0" VerticalAlignment="Top"/>
        <Label Content="Opponent Illegal" HorizontalAlignment="Left" Margin="183,161,0,0" VerticalAlignment="Top"/>
        <Button Content="Play Again?" HorizontalAlignment="Left" Height="27" Margin="115,254,0,0" VerticalAlignment="Top" Width="68"/>

    </Grid>
</Page>
