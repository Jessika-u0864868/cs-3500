<Page x:Class="BC.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="GamePage">

    <Grid Margin="0,0,-393,-464">
        <TextBlock x:Name="Title" HorizontalAlignment="Left" Margin="317,22,0,0" TextWrapping="Wrap" Text="Boggle" VerticalAlignment="Top" FontSize="30" Width="107"/>
        <DataGrid x:Name="BoggleBoard" HorizontalAlignment="Left" Margin="216,165,0,0" VerticalAlignment="Top" Height="300" Width="300" SelectedIndex="4" Loaded="DataGrid_Loaded" AutoGenerateColumns="False" HeadersVisibility="None"/>
        <TextBlock x:Name="PlayerName" HorizontalAlignment="Left" Height="34" Margin="236,76,0,0" TextWrapping="Wrap" Text="Player Name: " VerticalAlignment="Top" Width="114" FontSize="16" RenderTransformOrigin="0.5,0.471"/>
        <TextBlock x:Name="OpponentName" HorizontalAlignment="Left" Height="28" Margin="236,109,0,0" TextWrapping="Wrap" Text="Opponent Name: " VerticalAlignment="Top" Width="135" FontSize="16"/>
        <TextBox x:Name="Player" HorizontalAlignment="Left" Height="28" Margin="371,76,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="116" FontSize="16"/>
        <TextBox x:Name="Opponent" HorizontalAlignment="Left" Height="28" Margin="371,109,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="116" FontSize="16"/>
        <TextBlock x:Name="TimeRemaining" HorizontalAlignment="Left" Height="28" Margin="534,165,0,0" TextWrapping="Wrap" Text="Time Remaining:" VerticalAlignment="Top" Width="129" FontSize="16"/>
        <TextBox x:Name="Timer" HorizontalAlignment="Left" Height="28" Margin="534,198,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="129" FontSize="16"/>
        <TextBlock x:Name="Scores" HorizontalAlignment="Left" Height="28" Margin="76,165,0,0" TextWrapping="Wrap" Text="Scores" VerticalAlignment="Top" Width="79" FontSize="20" TextDecorations="Underline"/>
        <TextBlock x:Name="PlayerScore" HorizontalAlignment="Left" Height="23" Margin="10,203,0,0" TextWrapping="Wrap" Text="Player: " VerticalAlignment="Top" Width="114" FontSize="16"/>
        <TextBlock x:Name="OpponentScore" HorizontalAlignment="Left" Height="26" Margin="10,253,0,0" TextWrapping="Wrap" Text="Opponent: " VerticalAlignment="Top" Width="114" FontSize="16"/>
        <TextBox x:Name="PlayerScoreCount" HorizontalAlignment="Left" Height="28" Margin="95,202,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="116" FontSize="16"/>
        <TextBox x:Name="OpponentScoreCount" HorizontalAlignment="Left" Height="28" Margin="95,251,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="116" FontSize="16"/>
        <TextBlock x:Name="Words" HorizontalAlignment="Left" Height="28" Margin="216,480,0,0" TextWrapping="Wrap" Text="Word: " VerticalAlignment="Top" Width="79" FontSize="20" TextDecorations="{x:Null}"/>
        <TextBox x:Name="WordsEntered" HorizontalAlignment="Left" Height="28" Margin="295,480,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="221" FontSize="16"/>
    </Grid>
</Page>
