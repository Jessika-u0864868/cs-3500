/*----------------------------------------------------------------------------- 
01=DOCUMENT LAYOUT   
-----------------------------------------------------------------------------*/

/* Box Model Hack */
* {
   -moz-box-sizing: border-box; /* Firexfox */
   -webkit-box-sizing: border-box; /* Safari/Chrome/iOS/Android */
   box-sizing: border-box; /* IE */
}

/* Document level font adjustments */

/* Desktop */
html {
  font-size: 10px;
  height: 100%;
}

/* Tablet */
@media (max-width: 768px) {
  html { 
    font-size: 8px; 
    height: 100%;
  }
}

/* Mobile */
@media (max-width: 480px) {
  html { 
    font-size: 6px; 
    height: 100%;
  }
}

body {  
  font-family: 'Lato', sans-serif;
  line-height: 1.5;
  background: url(white);
  height: 100%;

  /* Full Page Background Receipe */
  background-size: 100% 100%;
  background-position: center;
  background-attachment: fixed;
}

#wrapper {
  min-height: 100%;
   /*equal to footer height */
  margin-bottom: -5rem; 
}

#wrapper:after {
  content: "";
  display: block;
   /*equal to footer height */
  height: -5rem;
}

p {
  font-size: 1.4rem;
}

h3 {

}

h4 {
  
}

h5 {

}

h6 {  
  font-size: 1.2rem;
  margin-top: 0;  
}

ul {
  padding: 0;
}

ul li {
  list-style: none;
}

img {

}

table {
  font-size: 1.4rem;
}

a {  
  color: #000000;
  text-decoration: none;
}

a:hover {
  color: blue;
}

/*----------------------------------------------------------------------------- 
02=UTILITIES
-----------------------------------------------------------------------------*/

.right-align {
  float: right;
}

.left-align {
  float: left;
}

.clear {
  clear: both;
}

.inline {
  display: inline;
}

.block {
  display: block;
}

/*----------------------------------------------------------------------------- 
03=HEADER
-----------------------------------------------------------------------------*/

header {  
  background: #552448;
  padding: 1rem 4rem;
  width: 100%;
  float: left;
  color: #FFFFFF;
  text-align: center;
}

h1 {  
  font-size: 2rem;
  font-family: georgia, times, serif;    
}

/*----------------------------------------------------------------------------- 
05=MAIN
-----------------------------------------------------------------------------*/

#main {
  float: left;
  padding: 1rem 4rem;
  color: #000000;   
}

#main p {
  font-weight: bold;
  text-decoration: underline;
  font-size: 2rem;
  margin-bottom: 0;
}

.title {
  text-decoration: underline;  
}

tr {
  text-align: center;
}

table.boggle-board tr td {
  padding-right: 2rem;
}

/*----------------------------------------------------------------------------- 
09=FOOTER
-----------------------------------------------------------------------------*/

footer {
  border-top: .1em solid #DDDDDD;
  height: 5rem;
  width: 100%;
  background: #552448;
  float: left;
  padding: 1rem 4rem;
  color: #FFFFFF;
}

footer p {
  text-align: center;
}
